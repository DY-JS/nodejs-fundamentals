<div class='auth'>
  <div class='row'>
    <div class='col s12'>
      <ul class='tabs'>
        <li class='tab col s6'>
          <a class='active' href='#login'>Sign in</a>
        </li>
        <li class='tab col s6'>
          <a class='active' href='#register'>Sign up</a>
        </li>
      </ul>
    </div>
    <div id='login' class='col s6 offset-s3'>
      <h1>Sign in</h1>
      <form action='/auth/login' method='POST'>
        <div class='input-field'>
          <input
            placeholder='Input email'
            id='email'
            type='text'
            name='email'
            class='validate'
            required
          />
          <label for='email'>Input email</label>
          <span class='helper-text' data-error='Input Email'></span>
        </div>
        <div class='input-field'>
          <input
            placeholder='Input password'
            id='password'
            type='password'
            name='password'
            class='validate'
            required
          />
          <label for='title'>Input password</label>
          <span class='helper-text' data-error='Input Password'></span>
        </div>
        <div class='input-field'>
          <input
            placeholder='Input password one more'
            id='confirm'
            type='password'
            name='confirm'
            class='validate'
            required
          />
          <label for='title'>Input password</label>
          <span class='helper-text' data-error='Input Password one more'></span>
        </div>
        <button class='btn btn-primary' type='submit'>Sign in</button>
      </form>
    </div>
    <div id='register' class='col s6 offset-s3'>
      <h1>Sign up</h1>
      <form action='/auth/login' method='POST'>
        <div class='input-field'>
          <input
            placeholder='Input email'
            id='remail'
            type='text'
            name='remail'
            class='validate'
            required
          />
          <label for='remail'>Input email</label>
          <span class='helper-text' data-error='Input Email'></span>
        </div>
        <div class='input-field'>
          <input
            placeholder='Input password'
            id='rpassword'
            type='password'
            name='rpassword'
            class='validate'
            required
          />
          <label for='title'>Input password</label>
          <span class='helper-text' data-error='Input Password'></span>
        </div>
        <button class='btn btn-primary' type='submit'>Sign up</button>
      </form>
    </div>
  </div>
</div>