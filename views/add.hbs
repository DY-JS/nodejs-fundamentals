<h1>add new courses</h1>
<form action="/add" method="POST">
<div class="input-field col s6">
          <input placeholder="Input title" id="title" type="text" name="title" class="validate" required>
          <label for="title">Course Title</label>
<span class="helper-text" data-error="Input title"></span>
        </div>
<div class="input-field col s6">
          <input placeholder="Input price" id="title" type="number" name="price" class="validate" required>
          <label for="title">Course Price</label>
<span class="helper-text" data-error="Input price"></span>
</div>
<div class="input-field col s6">
          <input placeholder="Img url" id="img" type="text" name="img" class="validate" required>
          <label for="img">URL of img</label>
<span class="helper-text" data-error="Input url"></span>
        </div>
<button class="btn btn-primary">Add course</button>
</form>